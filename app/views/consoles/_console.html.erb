<div id="<%= dom_id console %>" class="card">

  <p>
    <strong>Console:</strong>
    <%= console.name %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= console.console_type %>
  </p>

  <h3>Games:</h3>
  <ul>
    <% console.games.each do |game| %>
      <li><%= game %></li>
    <% end %>
  </ul>

  <h3>Accounts:</h3>
  <ul>
    <% console.accounts.each do |account| %>
      <li><%= account %></li>
  <% end %>
  </ul>

  <p>
    <strong>Purchased:</strong>
    <%= console.purchase_date %>
  </p>

</div>
